# Database
DATABASE_URL="postgresql://root:mysecretpassword@localhost:5432/ifg_rfd"

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Service Account (for RFD document storage)
# Create a service account in Google Cloud Console and download the JSON key
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"service-account@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs?gid=..."}'

# Google Drive Configuration
# Folder ID where RFDs should be stored (in service account's Drive)
GOOGLE_DRIVE_RFD_FOLDER_ID="your-drive-folder-id"

# Google Workspace Domain (optional - for organization-wide comment access)
# All users in this domain can comment on RFDs
GOOGLE_WORKSPACE_DOMAIN="onifytech.com"

# Team Email Addresses (optional - comma-separated list for editor access)
# These users will have edit permissions on all RFDs
GOOGLE_RFD_TEAM_EMAILS="leads@onifytech.com"

# Application URL (for OAuth callbacks)
ORIGIN="http://localhost:5173"